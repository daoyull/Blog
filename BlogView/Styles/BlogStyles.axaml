<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">

        </Border>
    </Design.PreviewWith>

    <Styles.Resources>
        <SolidColorBrush x:Key="BorderCardBorderBrush" Opacity="0.08" Color="#1C1F23" />
    </Styles.Resources>

    <Style Selector="Border.Card">
        <Setter Property="BorderBrush" Value="{StaticResource BorderCardBorderBrush}" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Background" Value="White" />
        <Setter Property="BorderThickness" Value="1" />

        
    </Style>
    
    <Style Selector="Border.Hover">
        <Style Selector="^:pointerover">
            <Setter Property="BoxShadow" Value="2 0 10 3 #3A000000" />
        </Style>
    </Style>
</Styles>

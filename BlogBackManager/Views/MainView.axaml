<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:BlogBackManager.Views"
             xmlns:viewModels="clr-namespace:BlogBackManager.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BlogBackManager.Views.MainView">
    <Design.DataContext>
        <viewModels:MainViewModel />
    </Design.DataContext>
    <Panel>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" ZIndex="10">
            <Button Click="Button_OnClick" Content="测试"></Button>
            <Button Click="ClearContent" Content="清屏"></Button>
            <Button Click="GcClick" Content="GC"></Button>
        </StackPanel>
        <Grid ColumnDefinitions="Auto,*">
            <views:LeftNavView Grid.Column="0" />
            <Border Grid.Column="1" Theme="{DynamicResource CardBorder}">
                <ContentControl x:Name="ContentControl" Content="{Binding MainView}" />
            </Border>

        </Grid>
    </Panel>
</UserControl>